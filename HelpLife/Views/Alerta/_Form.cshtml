@model Alerta
@{
    bool alterando = false;
    if (Model.MedicoId != null)
    {
        if (Model.MedicoId != 0)
        {
            alterando = true;
        }
    }
}
<div>
    <input type="hidden" asp-for="@Model.HistoricoId">
    <input type="hidden" asp-for="@Model.MedicoId">
    <input type="hidden" asp-for="@Model.Id">
    <input type="hidden" asp-for="@Model.DtCriacao">
    <div class="form-group col-sm-6 col-lg-3 col-xl-2">
        <label asp-for="@Model.Descricao"></label><br>
        <input asp-for="@Model.Descricao" class="form-control" UserName="form-control" autofocus autocomplete="off">
        <span asp-validation-for="@Model.Descricao" class="text-danger"></span>
    </div>
    <a asp-action="Index" asp-controller="Usuario" class="btn btn-outline-secondary">Cancelar</a>
    @if (!alterando)
    {
        <botao texto="Registrar"></botao>
    }
    else
    {
        <botao texto="Editar"></botao>
    }
</div>