@model RegisterUserViewModel
@{
    bool alterando = Context.Request.RouteValues.ContainsKey("id");
    ViewData["Title"] = "Registro";
    if (alterando)
        ViewBag.Subtitulo = "Atualizando Usuário";
    else
        ViewBag.Subtitulo = "Cadastro de Usuário";
}

<h1 class="text-primary">@ViewBag.Subtitulo</h1>
<hr>

<div asp-validation-summary="ModelOnly" class="val-summary text-danger mb-3"></div>

<form asp-action="Register" class="row">
    <input type="hidden" asp-for="@Model.Id">
    <input type="hidden" asp-for="@Model.UserId">
    <div class="form-group col-sm-6 col-lg-3 col-xl-2">
        <label asp-for="@Model.Nome"></label><br>
        <input asp-for="@Model.Nome" class="form-control" UserName="form-control" autofocus autocomplete="off">
        <span asp-validation-for="@Model.Nome" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-6 col-lg-3 col-xl-2">
        <label asp-for="@Model.DataNasc"></label><br>
        <input asp-for="@Model.DataNasc" class="form-control" UserName="form-control" autofocus autocomplete="off">
        <span asp-validation-for="@Model.DataNasc" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-6 col-lg-3 col-xl-2">
        <label asp-for="@Model.CRM"></label><br>
        <input asp-for="@Model.CRM" class="form-control" UserName="form-control" autofocus autocomplete="off">
        <span asp-validation-for="@Model.CRM" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-6 col-lg-3 col-xl-2">
        <label asp-for="@Model.NomeUsuario"></label><br>
        <input asp-for="@Model.NomeUsuario" class="form-control" UserName="form-control" autofocus autocomplete="off">
        <span asp-validation-for="@Model.NomeUsuario" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-6 col-lg-3 col-xl-2">
        <label asp-for="@Model.Telefone"></label><br>
        <input asp-for="@Model.Telefone" class="form-control" autocomplete="off">
        <span asp-validation-for="@Model.Telefone" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-8 col-lg-4 col-xl-3">
        <label asp-for="@Model.Email"></label><br>
        <input asp-for="@Model.Email" class="form-control" autocomplete="off">
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>
    @if (!alterando)
    {
        <div class="w-100"></div>
        <div class="form-group col-sm-6 col-lg-3 col-xl-2">
            <label asp-for="@Model.Senha"></label><br>
            <input asp-for="@Model.Senha" autocomplete="off" class="form-control">
            <span asp-validation-for="@Model.Senha" class="text-danger"></span>
        </div>
        <div class="w-100"></div>
        <div class="form-group col-sm-6 col-lg-3 col-xl-2">
            <label asp-for="@Model.ConfSenha"></label><br>
            <input asp-for="@Model.ConfSenha" autocomplete="off" class="form-control">
            <span asp-validation-for="@Model.ConfSenha" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">Cancelar</a>
            <botao texto="Cadastrar"></botao>
        </div>
    }
    else
    {
        <div class="mt-3">
            <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
            <botao texto="Atualizar"></botao>
        </div>
    }

</form>