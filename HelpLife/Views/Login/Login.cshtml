﻿@model LoginViewModel
@{
    var returnUrl = "";
    ViewData["Title"] = "Login";
    ViewBag.Subtitulo = "Login do usuário";
    if (Context.Request.Query.ContainsKey("returnUrl"))
    {
        returnUrl = Context.Request.Query["returnUrl"].ToString();
    }
    //TO-DO
}

<h1 class="text-primary">Login do usuário</h1>
<hr>
<div asp-validation-summary="ModelOnly" class="validation-summary text-danger mb-3"></div>
<partial name="_PartialMessage" />
<div class="row">
    <form asp-action="Login" class="col-4 mb-3">
        <input type="hidden" name="ReturnUrl" id="ReturnUrl" value="@returnUrl">
        <div class="form-group mb-3">
            <label asp-for="@Model.User"></label><br>
            <input asp-for="@Model.User" class="form-control" autofocus autocomplete="off">
            <span asp-validation-for="@Model.User" class="text-danger"></span>
        </div>
        <div class="w-100"></div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Password"></label><br>
            <input asp-for="@Model.Password" class="form-control">
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
        </div>
        <div class="w-100"></div>
        <div class="form-group">
            <div class="form-check">
                <input asp-for="@Model.Remember" class="form-check-input">
                <label asp-for="@Model.Remember" class="form-check-label"></label><br>
                <span asp-validation-for="@Model.Remember" class="text-danger"></span>
            </div>
        </div>
        <div class="w-100"></div>
        <div class="mt-3">
            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">Voltar</a>
            <button class="btn btn-primary" type="submit">Entrar</button>
        </div>
    </form>
    <p>
        Não tem registro? <a asp-action="Register">Clique aqui</a> para registrar.
    </p>
</div>