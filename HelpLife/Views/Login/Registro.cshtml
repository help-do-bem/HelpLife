﻿@model RegisterUserViewModel
@{
    bool alterando = Context.Request.RouteValues.ContainsKey("id");
    ViewData["Title"] = "Registro";
    if (alterando)
        ViewBag.Subtitulo = "Atualizando usuário";
    else
        ViewBag.Subtitulo = "Cadastro de usuário";
    //TO-DO
}

<h1 class="text-primary">@ViewBag.Subtitulo</h1>
<hr>

<div asp-validation-summary="ModelOnly" class="val-summary text-danger mb-3"></div>

<form asp-action="Register" class="row">
    <input type="hidden" asp-for="@Model.Id">
    <div class="form-group col-sm-6 col-lg-3 col-xl-2">
        <label asp-for="@Model.UserName"></label><br>
        <input asp-for="@Model.UserName" class="form-control" UserName="form-control" autofocus autocomplete="off">
        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-6 col-lg-3 col-xl-2">
        <label asp-for="@Model.PhoneNumber"></label><br>
        <input asp-for="@Model.PhoneNumber" class="form-control" autocomplete="off">
        <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-8 col-lg-4 col-xl-3">
        <label asp-for="@Model.Email"></label><br>
        <input asp-for="@Model.Email" class="form-control" autocomplete="off">
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>
    @if (!alterando)
    {
        <div class="w-100"></div>
        <div class="form-group col-sm-6 col-lg-3 col-xl-2">
            <label asp-for="@Model.Password"></label><br>
            <input asp-for="@Model.Password" autocomplete="off" class="form-control">
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
        </div>
        <div class="w-100"></div>
        <div class="form-group col-sm-6 col-lg-3 col-xl-2">
            <label asp-for="@Model.ConfPassword"></label><br>
            <input asp-for="@Model.ConfPassword" autocomplete="off" class="form-control">
            <span asp-validation-for="@Model.ConfPassword" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            <button class="btn btn-primary" type="submit">Cadastrar</button>
        </div>
    }
    else
    {
        <div class="mt-3">
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            <button class="btn btn-primary" type="submit">Atualizar</button>
        </div>
    }

</form>